
public class Quiz0604
{

	public static void main(String[] args)
	{
		int num = 1;
		int result = 1;
		do
		{
			if(num < 1000)
			{
				System.out.print(num + " + ");
				num++;
			}
			else
			{ 
				System.out.print(num + " = " + result );
				break;
			}
			result = result + num;
		}
			
		while(num <= 1000);
		
	}
}

