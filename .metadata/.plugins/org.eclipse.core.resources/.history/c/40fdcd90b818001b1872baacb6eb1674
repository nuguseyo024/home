package Quiz13;
import java.util.Scanner;

public class ch13_3
{

	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int[] num /*선언*/ = new int[10];
		System.out.println("10개의 정수를 입력하세요.");
		int a = 0;
		for(int i = 0; i < 10; i++)
		{
			a = sc.nextInt();
			if(a % 2 == 1)
			{
				num[a] = i;
			}
			System.out.printf("a %d , i %d , num[a] %d , num[i] %d",a,i, num[a], num[i]);
		}

		
	}
}	
//문제3
//길이가 10인 배열을 선언하고 총 10개의 정수를 입력받아서 홀수와 짝수를
//구분해서 출력하라.
